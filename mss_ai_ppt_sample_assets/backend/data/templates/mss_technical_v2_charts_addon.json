      "type": "native_table",
      "ai_generate": false,
      "table_config": {
        "data_source": "alerts.top_rules",
        "columns": [
          {
            "header": "规则名称",
            "field": "name",
            "width": 3.0
          },
          {
            "header": "触发次数",
            "field": "count",
            "width": 1.5
          },
          {
            "header": "误报率",
            "field": "false_positive_rate",
            "width": 1.5,
            "format": "percent"
          }
