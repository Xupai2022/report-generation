{
  "template_id": "mss_management_light_v1",
  "name": "MSS Management Light",
  "version": "1.0.0",
  "pptx_file": "mss_management_light_v1.pptx",
  "style": {
    "theme": "light",
    "primaryColor": "#2563EB"
  },
  "token_syntax": "{{TOKEN}}",
  "slides": [
    {
      "slide_no": 1,
      "slide_key": "cover",
      "description": "封面：报告标题/客户/周期/保密等级",
      "render_map": {
        "REPORT_TITLE": "cover.report_title",
        "CUSTOMER_NAME": "cover.customer_name",
        "PERIOD": "cover.period",
        "CONFIDENTIALITY": "cover.confidentiality",
        "GENERATED_AT": "cover.generated_at"
      },
      "schema": {
        "type": "object",
        "required": [
          "report_title",
          "customer_name",
          "period",
          "confidentiality",
          "generated_at"
        ],
        "properties": {
          "report_title": {
            "type": "string",
            "maxLength": 80
          },
          "customer_name": {
            "type": "string",
            "maxLength": 60
          },
          "period": {
            "type": "string",
            "maxLength": 40
          },
          "confidentiality": {
            "type": "string",
            "maxLength": 30
          },
          "generated_at": {
            "type": "string",
            "maxLength": 40
          }
        }
      }
    },
    {
      "slide_no": 2,
      "slide_key": "executive_summary",
      "description": "管理层摘要：KPI + 4条结论要点",
      "render_map": {
        "SLIDE_TITLE": "title",
        "KPI_ALERTS_TOTAL": "kpis.alerts_total",
        "KPI_INC_HIGH": "kpis.incidents_high",
        "KPI_MTTR_HOURS": "kpis.mttr_hours",
        "KPI_FALSE_POS_RATE": "kpis.false_positive_rate",
        "BULLETS": "bullets_text",
        "FOOTER": "footer"
      },
      "constraints": {
        "bullets": {
          "maxItems": 6,
          "maxCharsPerItem": 64
        }
      },
      "schema": {
        "type": "object",
        "required": [
          "title",
          "kpis",
          "bullets",
          "footer"
        ],
        "properties": {
          "title": {
            "type": "string",
            "maxLength": 40
          },
          "kpis": {
            "type": "object",
            "required": [
              "alerts_total",
              "incidents_high",
              "mttr_hours",
              "false_positive_rate"
            ],
            "properties": {
              "alerts_total": {
                "type": "string"
              },
              "incidents_high": {
                "type": "string"
              },
              "mttr_hours": {
                "type": "string"
              },
              "false_positive_rate": {
                "type": "string"
              }
            }
          },
          "bullets": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "bullets_text": {
            "type": "string"
          },
          "footer": {
            "type": "string",
            "maxLength": 80
          }
        }
      }
    },
    {
      "slide_no": 3,
      "slide_key": "alerts_overview",
      "description": "告警趋势与Top类别：左侧趋势图占位，右侧Top类别",
      "render_map": {
        "SLIDE_TITLE": "title",
        "CHART_ALERT_TREND": "chart_placeholder_text",
        "TOP_CATEGORIES": "top_categories_text",
        "FOOTER": "footer"
      },
      "schema": {
        "type": "object",
        "required": [
          "title",
          "chart_placeholder_text",
          "top_categories",
          "footer"
        ],
        "properties": {
          "title": {
            "type": "string",
            "maxLength": 40
          },
          "chart_placeholder_text": {
            "type": "string",
            "maxLength": 80
          },
          "top_categories": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "top_categories_text": {
            "type": "string"
          },
          "footer": {
            "type": "string",
            "maxLength": 80
          }
        }
      }
    },
    {
      "slide_no": 4,
      "slide_key": "major_incidents",
      "description": "重点事件：用列表/小表述呈现 1~5 起事件摘要",
      "render_map": {
        "SLIDE_TITLE": "title",
        "INCIDENT_LIST": "incident_list_text",
        "FOOTER": "footer"
      },
      "schema": {
        "type": "object",
        "required": [
          "title",
          "incidents",
          "incident_list_text",
          "footer"
        ],
        "properties": {
          "title": {
            "type": "string",
            "maxLength": 40
          },
          "incidents": {
            "type": "array",
            "items": {
              "type": "object"
            }
          },
          "incident_list_text": {
            "type": "string"
          },
          "footer": {
            "type": "string",
            "maxLength": 80
          }
        }
      }
    },
    {
      "slide_no": 5,
      "slide_key": "recommendations",
      "description": "整改建议：P0/P1 两列",
      "render_map": {
        "SLIDE_TITLE": "title",
        "RECOMMENDATIONS_P0": "p0_text",
        "RECOMMENDATIONS_P1": "p1_text",
        "FOOTER": "footer"
      },
      "schema": {
        "type": "object",
        "required": [
          "title",
          "p0_actions",
          "p1_actions",
          "p0_text",
          "p1_text",
          "footer"
        ],
        "properties": {
          "title": {
            "type": "string",
            "maxLength": 40
          },
          "p0_actions": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "p1_actions": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "p0_text": {
            "type": "string"
          },
          "p1_text": {
            "type": "string"
          },
          "footer": {
            "type": "string",
            "maxLength": 80
          }
        }
      }
    }
  ]
}